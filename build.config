### Target Vendor/Product
CONFIG_VENDOR=TPLINK
CONFIG_PRODUCT=MT7628

### Target ProductID
CONFIG_FIRMWARE_PRODUCT_ID="TL_WR820N-V2_RU"

############################################################
### Linux kernel configuration
############################################################

### WiFi драйвер 4.0
CONFIG_FIRMWARE_WIFI2_DRIVER=4.0

### ОТКЛЮЧАЕМ IPv6 (Экономия ~400KB, критично для 4MB)
CONFIG_FIRMWARE_ENABLE_IPV6=n

### IPSet (нужен для выборочной работы zapret)
CONFIG_FIRMWARE_INCLUDE_IPSET=y

### Ускоритель NAT (SFE) - важен для слабого CPU
CONFIG_FIRMWARE_INCLUDE_SHORTCUT_FE=y

### Сжатие памяти ZRAM (КРИТИЧНО для 32MB RAM)
CONFIG_FIRMWARE_INCLUDE_ZRAM=y

############################################################
### Userspace configuration
############################################################

